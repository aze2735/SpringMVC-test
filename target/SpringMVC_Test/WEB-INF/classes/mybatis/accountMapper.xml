<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.huadi.mapper.AccountMapper">

    <!--id对应方法名，入参对应属性名-->
    <select id="getLoginUser" parameterType="Account" resultType="Account">
        select * from account111 where username = #{username} and password = #{password}
    </select>
    <insert id="registerUser"  parameterType="Account" >
           insert into account111 (username,password) values (#{username},#{password})
       </insert>

</mapper>