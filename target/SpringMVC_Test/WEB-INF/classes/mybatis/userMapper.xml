<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.huadi.mapper.UserMapper">

    <resultMap id="userMap" type="com.huadi.pojo.User">
        <id column="user_id" property="userId" jdbcType="INTEGER" />
        <result column="user_name" property="username" jdbcType="VARCHAR" />
        <result column="user_age" property="age" jdbcType="INTEGER" />
        <result column="user_sex" property="sex" jdbcType="VARCHAR" />
    </resultMap>
<!--    新增用户-->
    <select id="addUser" parameterType="User" >
          insert into user111(user_id,user_name,user_sex,user_age)  values (10,#{username},#{sex},#{age})
    </select>
<!--    删除用户-->
    <insert id="deleteUser"  parameterType="java.lang.Integer" >
         delete  from user111 where user_id = #{userId}
       </insert>

<!--    修改用户-->
    <update id="updateUser" parameterType="User">
          update user111 set user_name = #{username} ,user_sex = #{sex},user_age = #{age} where user_id =#{userId}
    </update>

<!--    查询单个用户-->
    <select id="getUser" parameterType="java.lang.Integer" resultMap="userMap">
        select * from user111 where user_id = #{userId}
    </select>
<!--    查询列表-->
    <select id="getUserList"  resultMap="userMap">
        select * from user111
    </select>
</mapper>